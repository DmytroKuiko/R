<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:id="@+id/linearLayoutStartFragment"
              android:focusableInTouchMode="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_view_date"
            android:id="@+id/textView2"
            android:layout_weight="5"
            android:layout_margin="8dp"
            android:focusableInTouchMode="false"
            android:focusable="false"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:background="?attr/editTextBackground"
            android:id="@+id/textViewDate"
            android:hint="@string/edit_text_date"
            android:layout_weight="7"
            android:layout_margin="8dp"
            android:clickable="true"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_view_expenditure"
            android:id="@+id/textView4"
            android:layout_weight="5"
            android:layout_margin="8dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:imeOptions="actionDone"
            android:id="@+id/editTextSum"
            android:hint="@string/edit_text_sum"
            android:layout_weight="7"
            android:layout_margin="8dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/checkbox_description"
            android:id="@+id/textView8"
            android:layout_marginTop="15dp"
            android:layout_weight="9"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxDescription"
            android:checked="false"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDescription"
        android:maxLines="4"

        android:hint="@string/edit_text_Description"
        android:inputType="text"
        android:layout_marginTop="30dp"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="New Button"
            android:background="@drawable/round_corner"
            android:src="@drawable/ic_cloud_24dp"
            android:id="@+id/buttonShow"
            android:clickable="false"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_alignTop="@+id/buttonAdd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/button_add"
            android:id="@+id/buttonAdd"
            android:background="@drawable/round_corner"
            android:src="@drawable/ic_mode_edit_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="22dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="22dp"/>


    </RelativeLayout>

</LinearLayout>